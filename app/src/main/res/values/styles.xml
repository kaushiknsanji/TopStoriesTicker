<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Custom App Bar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Style for Popups in Custom App Bar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Style for the Main Activity of the App -->
    <style name="AppTheme.Main" />

    <!-- ========================================== -->
    <!-- STYLES USED FOR THE NEWS CONTENT CARD TILE -->
    <!-- ========================================== -->
    <style name="NewsItemCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardForegroundColor">?android:selectableItemBackground</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- For the Image Buttons in the News Card Tile -->
    <style name="NewsCardImageButtonsStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/imgbtn_article_expand_size</item>
        <item name="android:layout_height">@dimen/imgbtn_article_expand_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
